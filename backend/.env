# 应用配置
APP_NAME=QuickRewind
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 火山引擎配置
VOLCENGINE_API_KEY=31ed6edd-3529-454d-9c8c-d712fed9797e
VOLCENGINE_REGION=https://ark.cn-beijing.volces.com/api/v3
VOLCENGINE_MODEL=kimi-k2-250905
VOLCENGINE_EMBEDDING_MODEL=doubao-embedding-text-240715
VOLCENGINE_EMBEDDING_DIM=2560

# Milvus配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=video_content_vectors
MILVUS_DIM=2560

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 数据库配置
DATABASE_URL=postgresql://admin:admin@localhost:5432/mydb

# 路径配置
DATA_DIR=/app/data
VIDEO_DIR=/app/data/videos
AUDIO_DIR=/app/data/audio
SUBTITLE_DIR=/app/data/subtitles
VECTOR_DIR=/app/data/vectors
LOG_DIR=/app/logs

# 处理配置
MAX_VIDEO_SIZE=1073741824  # 1GB
WORKERS=4
BATCH_SIZE=300

# 语音识别配置
# 引擎选择: whisper 或 funasr
SPEECH_ENGINE=funasr

# FunASR配置
FUNASR_MODEL_NAME=paraformer-zh
FUNASR_VAD_MODEL=fsmn-vad
FUNASR_PUNC_MODEL=ct-punc

# Whisper配置
# 可选模型大小: tiny, base, small, medium, large
WHISPER_MODEL=small
WHISPER_LANGUAGE=zh
WHISPER_DEVICE=cpu

# Celery配置
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
# CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai
CELERY_ENABLE_UTC=True