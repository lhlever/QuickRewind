# 应用配置
APP_NAME=QuickRewind
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 火山引擎配置
VOLCENGINE_API_KEY=31ed6edd-3529-454d-9c8c-d712fed9797e
VOLCENGINE_SECRET_KEY=your-volcengine-secret-key
VOLCENGINE_REGION=cn-beijing
VOLCENGINE_MODEL=kimi-k2-250905

# Milvus配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=video_content_vectors
MILVUS_DIM=768

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 数据库配置
DATABASE_URL=postgresql://admin:admin@localhost:5432/mydb

# 路径配置
DATA_DIR=/app/data
VIDEO_DIR=/app/data/videos
AUDIO_DIR=/app/data/audio
SUBTITLE_DIR=/app/data/subtitles
VECTOR_DIR=/app/data/vectors
LOG_DIR=/app/logs

# 处理配置
MAX_VIDEO_SIZE=1073741824  # 1GB
WORKERS=4
BATCH_SIZE=300

# Celery配置
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
# CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai
CELERY_ENABLE_UTC=True